@using WordGuess.Models
@model WordGuess.Models.Word;


<div>
    Game Page
</div>
<div class="blockquote text-center">
<hr/>
<div>
    <thead>
        <tr>
        
        <th scope="col">Do you think you know words?  Let's check it out, word category is @Model.Category.</th>
        </tr>
    </thead>
    <tbody>
        
        <tr>            
            <td><h4>@Model.Value</h4></td>
        </tr>         
      
    </tbody>

</table>
<table align="center" >
    <form asp-action="Enter" align="center">
        
        <div style="width:50px">
            <div class="input-group-prepend">
                <input type="hidden" value = "@Model.Category" asp-for="@Model.Category">
                <input type="hidden" value = "@Model.Value" asp-for="@Model.Value">
                <input type="hidden" value = "@Model.InitialWord" asp-for="@Model.InitialWord">
            </div>
            <div align="center">   
                <input type="text" class="form-control" maxlength="1" placeholder="Enter one letter . . . &#x23ce;" asp-for="Letter" value="" > 
                <button type="submit" class="btn btn-primary">GUESS</button>
            </div>


               
            
            
        </div>
    
    </form>
</table>

</div>
</div>