@using WordGuess.Models
@model List<Word>

<div>
    <h2>List of Words - Admin only.</h2>
</div>

<hr/>
<div>

    <table class="table table-hover">
    <thead>
        <tr>
        <th scope="col">Category</th>
        <th scope="col">Value</th>
        </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Count; i++)
        {
            <div>
                <tr>
                    <td>@Model[i].Category</td>
                    <td>@Model[i].Value</td>
                </tr>
            </div>
        }   
    </tbody>
</table>

<div>
   <a asp-action="Form" class="btn btn-primary">Create New Word</a>
</div>

<div>
    <a asp-action="Game" class="btn btn-danger">Play Game</a>
</div>
</div>